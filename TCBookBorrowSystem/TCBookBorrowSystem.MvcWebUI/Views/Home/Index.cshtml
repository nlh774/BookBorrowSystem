@using TCBookBorrowSystem.Model;
@model List<BookContract>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Model != null)
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>序列号</th>
                <th>名称</th>
                <th>状态</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        @book.SerialId   
                    </td>
                    <td>
                        @book.Name
                    </td>
                     <td>
                        @book.BookStatus
                    </td>
                    <td style="text-align:center;">
                        @{
                            var editUrl = Url.Content("~/Account/Edit/" + book.Id);
                        }
                        @Html.ActionLink("编辑", "Edit", "Account", new { id = book.Id }, new { onclick = "javascript: window.parent.openTab('editSystem', '" + editUrl + "', '编辑',true);return false;" })
                        @Html.ActionLink("删除", "Remove", "Account", new { id = book.Id, returnUrl = Request.RawUrl }, new { onclick = "javascript:return confirm('确认要删除吗?');" })
                        @Html.ActionLink("查看借阅记录", "BookBorrowLog", "Index", new { id = book.Id})
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

